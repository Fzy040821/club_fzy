    </style>

    <style name="View.0dp">

        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="AMapNaviStyle" parent="Theme.Club_fengzy"></style>


    <!-- 禁用多点触控 -->
    <style name="disableSplitMotion">
        <item name="android:windowEnableSplitTouch">false</item>
        <item name="android:splitMotionEvents">false</item>
    </style>

    <!-- 按钮通用样式 -->
    <style name="CustomButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_circle_red</item>
    </style>
    <style name="CustomButtonRound">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">44dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/bg_round_new_theme_4dp</item>
    </style>

    <style name="baseRecyclerView" parent="disableSplitMotion">
        <item name="android:overScrollMode">never</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <!-- RecyclerView通用样式 -->
    <style name="sRecyclerView" parent="baseRecyclerView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="mRecyclerView" parent="baseRecyclerView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <!--背景模糊的Dialog样式-->
    <style name="CustomDialogWithDim" parent="android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ActivityDialogStyle">
        <!--去掉action bar和标题栏-->
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <!--背景透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--dialog圆角-->
        <item name="android:windowBackground">@drawable/jverify_dialog_bg</item>
        <item name="android:windowAnimationStyle">@style/ActivityDialogAnimStyle</item>
    </style>


    <style name="ActivityDialogAnimStyle" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityOpenExitAnimation">@anim/fab_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/bottom_in</item>
        <item name="android:activityCloseExitAnimation">@anim/fab_out</item>
    </style>

    <style name="MallOrderTabLayoutTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">16sp</item>
    </style>

    <!--PictureSelector 取消透明背景-->
    <style name="Picture.Theme.Translucent" parent="Base.Theme.Club_fengzy">
        <!--        <item name="android:windowBackground">@color/ps_color_transparent</item>-->
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">false</item>
    </style>

    <style name="crowd_item_progressBar">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/crowd_progressbar_unselect</item>
        <item name="android:minHeight">10dp</item>
        <item name="android:maxHeight">10dp</item>
    </style>

</resources>